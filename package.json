{
    "name": "sveltekit-typesafe-api",
    "version": "0.1.0",
    "author": "Laurent St√©phenne <laurent@guibi.ca>",
    "description": "Adding type safety to SvelteKit's server endpoints and fetches.",
    "keywords": [
        "sveltekit",
        "typescript",
        "api",
        "type-safety",
        "endpoint",
        "zod",
        "validation"
    ],
    "license": "MIT",
    "homepage": "https://www.npmjs.com/package/sveltekit-typesafe-api",
    "bugs": "https://github.com/Guibi1/sveltekit-typesafe-api/issues",
    "repository": {
        "url": "https://github.com/Guibi1/sveltekit-typesafe-api"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "types": "dist/index.d.ts",
    "typesVersions": {
        "*": {
            "vite": [
                "dist/vite/index.d.ts"
            ],
            "server": [
                "dist/server/index.d.ts"
            ]
        }
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./vite": {
            "types": "./dist/vite/index.d.ts",
            "import": "./dist/vite/index.js"
        },
        "./server": {
            "types": "./dist/server/index.d.ts",
            "import": "./dist/server/index.js"
        },
        "./package.json": "./package.json"
    },
    "peerDependencies": {
        "@sveltejs/kit": "^1.22.5",
        "svelte": "^3.55.0 || ^4.0.0",
        "vite": "^4.4.9",
        "zod": "^3.20.0"
    },
    "devDependencies": {
        "@types/node": "^20.5.1",
        "prettier": "^3.0.2",
        "prettier-plugin-organize-imports": "^3.2.3",
        "vite": "^4.4.9"
    },
    "dependencies": {
        "@sveltejs/kit": "^1.22.6",
        "typescript": "^5.1.6",
        "zod": "^3.22.2"
    },
    "type": "module",
    "packageManager": "pnpm@8.5.1+",
    "scripts": {
        "build": "tsc",
        "lint": "prettier --plugin-search-dir . --check . && eslint .",
        "format": "prettier --plugin-search-dir . --write ."
    }
}
